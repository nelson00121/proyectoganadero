@using Database.Models
@using Database.DTOS
@using BackOffice.Services
@using MudBlazor
@inject IUnidadesDeMedidaAlimentoService UnidadesDeMedidaAlimentoService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudContainer Style="max-width: 600px;">
            <MudForm @ref="form" @bind-IsValid="@isFormValid">
                <MudGrid>
                    <MudItem xs="12">
                        <MudTextField @bind-Value="model.Nombre"
                                     Label="Nombre de la Unidad"
                                     Variant="Variant.Outlined"
                                     Required="true"
                                     RequiredError="El nombre de la unidad es obligatorio"
                                     Validation="@(new Func<string, Task<IEnumerable<string>>>(ValidateNombre))"
                                     For="@(() => model.Nombre)" />
                    </MudItem>
                </MudGrid>
            </MudForm>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancelar</MudButton>
        <MudButton Color="Color.Primary" 
                   Variant="Variant.Filled"
                   OnClick="Submit"
                   Disabled="@(!isFormValid || isSubmitting)">
            @if (isSubmitting)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                <MudText Class="ms-2">Procesando...</MudText>
            }
            else
            {
                @(IsEditMode ? "Actualizar" : "Crear")
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] 
    IMudDialogInstance MudDialog { get; set; }

    [Parameter] 
    public bool IsEditMode { get; set; } = false;

    [Parameter] 
    public UnidadesDeMedidaAlimento? UnidadDeMedida { get; set; }

    private MudForm form = default!;
    private bool isFormValid;
    private bool isSubmitting;

    private UnidadesDeMedidaAlimentoCreateDto model = new();

    protected override async Task OnInitializedAsync()
    {
        if (IsEditMode && UnidadDeMedida != null)
        {
            model = new UnidadesDeMedidaAlimentoCreateDto
            {
                Id = UnidadDeMedida.Id,
                Nombre = UnidadDeMedida.Nombre
            };
        }
    }

    private async Task<IEnumerable<string>> ValidateNombre(string nombre)
    {
        var errors = new List<string>();
        
        if (string.IsNullOrWhiteSpace(nombre))
        {
            errors.Add("El nombre de la unidad es obligatorio");
            return errors;
        }

        if (nombre.Length < 1)
        {
            errors.Add("El nombre debe tener al menos 1 caracter");
            return errors;
        }

        if (nombre.Length > 50)
        {
            errors.Add("El nombre no puede exceder 50 caracteres");
            return errors;
        }

        try
        {
            var excludeId = IsEditMode && UnidadDeMedida != null ? UnidadDeMedida.Id : (int?)null;
            var exists = await UnidadesDeMedidaAlimentoService.NombreExistsAsync(nombre, excludeId);
            if (exists)
            {
                errors.Add("Este nombre de unidad ya existe");
            }
        }
        catch (Exception)
        {
            errors.Add("Error al validar el nombre");
        }

        return errors;
    }

    void Cancel()
    {
        MudDialog?.Close();
    }

    private async Task Submit()
    {
        if (!isFormValid) return;

        isSubmitting = true;
        try
        {
            if (IsEditMode && UnidadDeMedida != null)
            {
                var result = await UnidadesDeMedidaAlimentoService.UpdateUnidadesDeMedidaAlimentoAsync(UnidadDeMedida.Id, model);
                if (result != null)
                {
                    Snackbar.Clear();
                    Snackbar.Add("Unidad de medida actualizada exitosamente", Severity.Success);
                    MudDialog?.Close();
                }
                else
                {
                    Snackbar.Clear();
                    Snackbar.Add("Error al actualizar la unidad de medida", Severity.Error);
                }
            }
            else
            {
                var result = await UnidadesDeMedidaAlimentoService.CreateUnidadesDeMedidaAlimentoAsync(model);
                if (result != null)
                {
                    Snackbar.Add("Unidad de medida creada exitosamente", Severity.Success);
                    MudDialog?.Close();
                }
                else
                {
                    Snackbar.Add("Error al crear la unidad de medida", Severity.Error);
                }
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error al procesar la solicitud: {ex.Message}", Severity.Error);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}